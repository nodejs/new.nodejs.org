<!DOCTYPE html>
<html lang="{{site.locale}}">
{{> html-head }}

<body>
    {{> header }}

    <div id="main">
        <div class="container has-side-nav">

            {{> foundation-menu }}

            <article>
                <div class="container">

                    <ul class="blog-index">
                        {{#each collections.blogAnnounce}}
                            {{#if title}}
                                <li>
                                    <time datetime="{{ date }}">{{ strftime date }}</time>
                                    <a href="/{{../site.locale}}/{{ path }}/">{{ title }}</a>
                                </li>
                            {{/if}}
                        {{/each}}
                    </ul>

                </div>
            </article>

        </div>
    </div>

    {{> footer }}
</body>
</html>
