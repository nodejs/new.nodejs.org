<!DOCTYPE html>
<html lang="{{site.locale}}">
{{> html-head }}

<body>
    {{> header }}

    <main>
        <div class="container">

            <div id="home-intro">

                {{{ contents }}}

                {{#if project.banner.visible}}
                    <p class="home-version home-version-banner">
                        {{ labels.current-version }}: {{ project.currentVersion }}<br>
                        {{{ project.banner.content }}}
                    </p>
                {{else}}
                      <p class="home-version">{{ labels.current-version }}: {{ project.currentVersion }}</p>
                {{/if}}

                <a href="https://nodejs.org/dist/latest/" id="home-downloadbutton" data-version="{{ project.currentVersion }}" data-dl-local="{{ labels.download-for }}">{{ labels.download }}</a>

                <ul class="list-divider-pipe home-secondary-links">
                    <li><a href="https://nodejs.org/dist/latest/">{{ labels.other-downloads }}</a></li>
                    <li><a href="https://github.com/nodejs/node-v0.x-archive/blob/master/ChangeLog">{{ labels.changelog }}</a></li>
                    <li><a href="{{ site.docs.api.link }}">{{ labels.api }}</a></li>
                </ul>

            </div>

        </div>
    </main>

    {{> footer }}
    <script src="/static/js/download.js" async defer></script>
</body>
</html>
